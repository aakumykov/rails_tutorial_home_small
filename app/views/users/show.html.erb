<% provide(:title, @user.name) %>

<div class="row">
	<aside>
		<h1>
			<%= gravatar_for @user, size: 50 %>
			<%= @user.name %>
		</h1>
	</aside>
	<div class="span8">
		<% if @user.microposts.any? %>
			<h3>Микросообщений (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>