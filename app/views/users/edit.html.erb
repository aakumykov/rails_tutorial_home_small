<% provide(:title, "Редактирование пользователя") %>
<h1>Обновление вашего профиля</h1>

<div class="row">
  <div class="span6 offset3">

    <%= form_for(@user) do |f| %>

    	<%= render 'shared/error_messages', object: f %>

    	<%= render partial: 'params_fields', object: f %>

    	<%= f.submit 'Сохранить изменения', class: "btn btn-large btn-primary" %>

    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails" target='_blank'>изменить</a>

  </div>
</div>
